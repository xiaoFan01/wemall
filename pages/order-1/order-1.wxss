@import "/pages/order/order.wxss";
.order-item{
  
}
.order-all{
  margin-top: 80rpx
}
.order{
  font-size: small;
  margin-top: 30rpx;
  padding-left: 25rpx;
  padding-right: 25rpx;
  height: 400rpx;
  background: white;
}
.goods{
  display: flex;
  flex-direction: row;
  padding-top: 15rpx;
  height: 200rpx;
  width: 100%;
  border-bottom: 1rpx whitesmoke solid;
}
.photo{
  height: 100%;
  width: 30%
}
.photo-size{
  height: 90%;
  width: 90%
}
.goods-name{
  width: 70%;
  height: 35px;
  padding-top: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.price-count{
  padding-left: 10rpx;
  padding-top: 40rpx;
  width: 20%
}
.send{
  display: flex;
  flex-direction: row;
  padding-bottom: 10rpx;
  border-bottom: 1rpx whitesmoke solid;
}
.subtotal{
  padding-top: 10rpx;
  padding-left: 45%;
  display: flex;
  flex-direction: row
}
.send-price{
  padding-left: 75%
}
.order-title{
  display: flex;
  flex-direction: row;
  height: 60rpx;
  border-bottom: 1rpx whitesmoke solid;
  background: white;
  padding-top: 10rpx
}
.order-title-name{
  width: 80%
}
.no-order{
  padding-top: 20rpx;
  color:thistle;
  text-align: center
}