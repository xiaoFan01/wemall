@import "/static/wxss/footer.wxss";
.search{
  display: flex;
  flex-direction: row;
  margin-top: 0px;
  height: 100rpx;
  background: red;
  position: fixed;
  top: 0px;
  width: 100%;
  overflow: hidden;
  z-index: 999
}
.search-input{
  display: flex;
  flex-direction: row;
  margin-left: 20rpx;
  padding-top: 20rpx;
  width: 650rpx
}
.search-input-in{
  padding-left: 20rpx;
  border-radius: 5px;
  height: 60rpx;
  color: black;
  width: 100%;
  background: #fff
}
.search-btn{
  padding-top: 20rpx;
  padding-left: 20rpx;
  display: flex;
  flex-direction: row;
  width: 100rpx
}
.slideshow{
  height: auto; 
  margin-top: 100rpx;
  background: seagreen
}
.slide-images{
  height: 100%;
  width: 100%
}
.advertisement{
  height: 1300rpx;
  background: #fff
}
.advertisement-title{
  padding-top: 20rpx;
  color: darkgray;
  font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
  text-align: center
}
.advertisement-img{
  padding-top: 20rpx;
  width: 100%;
}
.img-size{
  width: 100%;
  height: 350rpx;
}
.goods-row{
  display: flex;
  flex-direction: row;
  padding-top: 40rpx;
  height: 400rpx
}
.goods{
  display: flex;
  flex-direction: column;
  margin: 0rpx 10rpx 0rpx 20rpx;
  width: 345rpx;
}
.goods2{
  display: flex;
  flex-direction: column;
  margin: 0rpx 20rpx 0rpx 10rpx;
  width: 345rpx;
}
.goods-img{
  display: flex;
  flex-direction: row;
  width: 100%
}
.goods-img-size{
  height: 300rpx;
  width: 100%;
}
.goods-name{
  font-size: smaller;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis
}
.goods-price{
  display: flex;
  flex-direction: column;
  font-size: small;
  color: red
}
