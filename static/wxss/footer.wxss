.bar{
  display: flex;
  flex-direction: row;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  height: 100rpx;
  width: 100%
}
.icon-div{
  display: flex;
  flex-direction: column;
  width: 33.33%
}
.icon-size{
  width: 60rpx;
  height: 60rpx;
  display: inline-block
}
.icon-position{
  display: flex;
  /* width: 100%;
  height: auto; */
  flex-direction: column;
  margin: 0 auto; 
  text-align: center
}
.icon-name{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 40rpx;
  text-align:center;
  font-size: smaller
} 
.icon-name-select{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 40rpx;
  text-align:center;
  font-size: smaller;
  color: #ff3333
}